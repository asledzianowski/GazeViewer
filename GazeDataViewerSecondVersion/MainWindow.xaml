<Window x:Class="GazeDataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:local="clr-namespace:GazeDataViewer"
        mc:Ignorable="d"
        Title="Gaze Data Viewer" 
        Height="350" 
        Width="525"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        Background="White">

    <ScrollViewer x:Name="LayoutRoot" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
        <Grid Name="ScreenContentGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="LightGray"></Border>

            <DockPanel Grid.Row="0" HorizontalAlignment="Right" Background="LightGray" Width="Auto" Height="32">
                <TextBox Name="LoadDataPathTextBox" Width="400" Height="32"/>
                <Button  Name="LoadDataButton" Content="Load Data" Click="LoadDataButton_Click"  Width="100" Height="32" Background="DarkGray" Foreground="White" ></Button>
            </DockPanel>

            <d3:ChartPlotter Grid.Row="1" Name="amplitudePlotter" Background="White"  Margin="10,0,10,0" >
                <d3:ChartPlotter.MainHorizontalAxis>
                    <d3:HorizontalIntegerAxis Name="timeAxis" />
                </d3:ChartPlotter.MainHorizontalAxis>
                <d3:ChartPlotter.MainVerticalAxis>
                    <d3:VerticalAxis Name="valueAxis"/>
                </d3:ChartPlotter.MainVerticalAxis>
               
                <d3:Header Content="Spot/Gaze Track"/>
                <d3:VerticalAxisTitle Content="Value"/>
                <d3:HorizontalAxisTitle Content="Time"/>
            </d3:ChartPlotter>

            <Grid Grid.Row="2" Margin="10,10,10,10" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0" Grid.Row="0"  Height="200"  Name="LogTextBox" Width="600"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ></TextBox>

                <Grid Grid.Column="1" Grid.Row="0" Width="Auto" HorizontalAlignment="Right" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="44"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <!--Row 0-->
                    <Label Grid.Column="0" Grid.Row="0" Content="Denoise:" HorizontalAlignment="Right" ></Label>
                    <CheckBox Grid.Column="1" Grid.Row="0" Name="CBDenoise" IsChecked="False" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>

                    <Label Grid.Column="2" Grid.Row="0" Content="Fill Plot:" HorizontalAlignment="Right" ></Label>
                    <CheckBox Grid.Column="3" Grid.Row="0" Name="CBFillPlot" IsChecked="False" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>

                    <Label Grid.Column="4" Grid.Row="0" Content="Evaluate Start:" HorizontalAlignment="Right" ></Label>
                    <CheckBox Grid.Column="5" Grid.Row="0" Name="CBEvalStart" IsChecked="False" VerticalAlignment="Center" HorizontalAlignment="Center"
                              Click="CBEvalStart_Click"></CheckBox>



                    <Label Grid.Column="0" Grid.Row="1" Content="Points count:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Grid.Row="1" Width="44" HorizontalAlignment="Left" Text="10" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBSavGoayPointsNum"></TextBox>
                    <Label Grid.Column="2" Grid.Row="1" Content="Derivative:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="3" Grid.Row="1" Width="44" HorizontalAlignment="Left" Text="0" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBSavGoayDerivOrder"></TextBox>
                    <Label Grid.Column="4" Grid.Row="1" Content="Polynominal:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="5" Grid.Row="1" Width="44" HorizontalAlignment="Left" Text="4" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBSavGoayPolyOrder"></TextBox>

                    <!--Row 1-->
                  
                    <Label Grid.Column="2" Grid.Row="2" Content="Start Rec. Index:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="3" Grid.Row="2" Width="44" HorizontalAlignment="Left" Text="3000" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBStartRec"
                             ></TextBox>

                    <Label Grid.Column="4" Grid.Row="2" Content="End Rec. Index:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="5" Grid.Row="2" Width="44" HorizontalAlignment="Left" Text="" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBEndRec"
                             ></TextBox>

                    <!--Row 2-->
                    <Label Grid.Column="0" Grid.Row="3" Content="Eye Shift Peroid:" HorizontalAlignment="Right" ></Label>
                    <TextBox Grid.Column="1" Grid.Row="3" Width="44" HorizontalAlignment="Left" Text="5" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBEyeShiftPeroid"></TextBox>

                    <Label Grid.Column="2" Grid.Row="3" Content="Spot Shift Peroid:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="3" Grid.Row="3" Width="44" HorizontalAlignment="Left" Text="-1" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBSpotShiftPeroid"></TextBox>

                    <Label Grid.Column="4" Grid.Row="3" Content="Amp Prop:" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="5" Grid.Row="3" Width="44" HorizontalAlignment="Left" Text="0.5" PreviewTextInput="DecimalValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBAmpProp"></TextBox>

                    <!--Row 3-->
                    <Label Grid.Column="0" Grid.Row="4" Content="Delay window &gt;" HorizontalAlignment="Right" ></Label>
                    <TextBox Grid.Column="1" Grid.Row="4" Width="44" HorizontalAlignment="Left" Text="0.2" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBDelayWindowLargerThan"></TextBox>
                    <Label Grid.Column="2" Grid.Row="4" Content="Delay window &lt;" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="3" Grid.Row="4" Width="44" HorizontalAlignment="Left" Text="0.6" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBDelayWindowSmallerThan"></TextBox>

                    <Label Grid.Column="4" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Reduce on diff &gt;"></Label>
                    <TextBox Grid.Column="5" Grid.Row="4" Width="44" HorizontalAlignment="Left" Text="5" PreviewTextInput="NumberValidationTextBox" 
                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="TBReduceEyeSpotAmpDiff"></TextBox>

                    <!--Row 4-->
                    <Button Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="3"  Content="Calculate" Click="ButtonCalculate_Click" Margin="0,10,0,0"></Button>

                </Grid>
                
            </Grid>
            
           
                
       


        </Grid>
    </ScrollViewer>


   
</Window>
